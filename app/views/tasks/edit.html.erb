<h2>编辑任务</h2>
<%= link_to '删除此任务', @task, method: :delete, data: { confirm: "你确定要删除此任务吗?" } %>
<%= form_for(@task) do |f| %>
<table>
  <tr>
    <td>任务名称：</td><td><%= f.text_field(:name, size: 50) %></td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <small>(<%= link_to "返回列表", projects_path %>)</small>
      <%= f.submit("更新任务") %></td>
  </tr>
<% end %>
